<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".add_stock">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/back_stock" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="253dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="68dp"
        android:text="Welcome To Add Stock Product"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/eTidprod"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="Enter Item"
        android:textColor="@color/white"
        android:textColorHint="@color/teal_200"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/eTstock"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTidprod"
        android:layout_alignStart="@+id/eTidprod"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:hint="Enter Quantity To Add"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/teal_200"
        android:textSize="15dp" />

    <Button
        android:id="@+id/buttonAddStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTstock"
        android:layout_alignStart="@+id/eTstock"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="5dp"
        android:hint="Add Stock"
        android:onClick="STOCKCOUNT"
        android:textColorHint="#fff"
        android:textSize="12dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonCheckStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTstock"
        android:layout_alignStart="@+id/eTstock"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="5dp"
        android:hint="Check Stock"
        android:onClick="VIEWPROD"
        android:textColorHint="#fff"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAddStock"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="1dp"
        android:text="Add Stock Asus Product"
        android:textAlignment="center"
        android:textColor="@color/white" />
</RelativeLayout>