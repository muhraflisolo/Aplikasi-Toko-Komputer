<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/laptop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".LAPTOP">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-3dp"
                android:layout_marginTop="-685dp"
                android:layout_marginBottom="-690dp"
                android:background="@drawable/backround" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="115dp"
                android:layout_marginTop="32dp"
                android:text="ASUS LAPTOP"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="365dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="79dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/l1" />

            <TextView
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton"
                android:layout_alignStart="@+id/imageButton"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="Kode : L001"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton2"
                android:layout_alignStart="@+id/imageButton2"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="Kode : L002"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton3"
                android:layout_alignStart="@+id/imageButton3"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="Kode : L003"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton4"
                android:layout_alignStart="@+id/imageButton4"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="Kode : L004"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvStock1"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton"
                android:layout_alignStart="@+id/imageButton"
                android:layout_marginStart="207dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:hint="Stock"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/teal_200"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="365dp"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="329dp"
                android:background="@drawable/l2" />

            <TextView
                android:id="@+id/tvStock2"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton2"
